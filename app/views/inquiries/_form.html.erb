<%= form_for inquiry do |f| %>
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>
view raw